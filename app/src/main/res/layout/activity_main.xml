<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/pm25"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/pm10"
        app:layout_constraintEnd_toStartOf="@+id/pm10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pm10"
        custom:arc_angle="@integer/gauge_arc_angle"
        custom:arc_finished_color="#304ffe"
        custom:arc_progress="25"
        custom:arc_suffix_text=" "
        custom:arc_bottom_text="@string/pm25_label"
        custom:arc_bottom_text_size="12dp"
        custom:arc_unfinished_color="#ccc" />

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/pm10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pm25"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        custom:arc_angle="@integer/gauge_arc_angle"
        custom:arc_finished_color="#304ffe"
        custom:arc_progress="50"
        custom:arc_suffix_text=" "
        custom:arc_bottom_text="@string/pm10_label"
        custom:arc_bottom_text_size="12dp"
        custom:arc_unfinished_color="#ccc" />

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/temp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/pressure"
        app:layout_constraintEnd_toStartOf="@+id/pressure"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pressure"
        custom:arc_angle="@integer/gauge_arc_angle"
        custom:arc_finished_color="#304ffe"
        custom:arc_progress="10"
        custom:arc_max="45"
        custom:arc_suffix_text=" "
        custom:arc_bottom_text="@string/temperature_label"
        custom:arc_bottom_text_size="11dp"
        custom:arc_unfinished_color="#ccc" />

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/pressure"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/temp"
        app:layout_constraintTop_toBottomOf="@+id/pm10"
        custom:arc_angle="@integer/gauge_arc_angle"
        custom:arc_finished_color="#304ffe"
        custom:arc_progress="1024"
        custom:arc_max="2000"
        custom:arc_suffix_text=" "
        custom:arc_text_size="32dp"
        custom:arc_bottom_text="@string/pressure_label"
        custom:arc_bottom_text_size="12dp"
        custom:arc_unfinished_color="#ccc" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="ul. Kanonika"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
